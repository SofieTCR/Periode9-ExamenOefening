@using OnlineElectionControl.Classes;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineElectionControl</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kadwa&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>
   
   
    <div id="nav-main-div">

        
         <nav id="nav-bar" class="collapsed">

             <div id="nav-links">

                 <div id="login-arrow-group">

                    <div class="icon-width-fix">
                        <a asp-controller="Login" asp-action="Index" id="login-icon"><img src="~/svg-icons/user-icon.svg" alt="login icon" id="login-svg"/><h1 class="nav-bar-expanded-text">@(Current.UserIsLoggedIn ? $"{Current.LoggedInUser!.UserSortName}" : "Inloggen")</h1></a>
                    </div>

                    <div class="icon-width-fix">
                        <a onclick="toggleNav()" id="arrow-icon"><img src="~/svg-icons/arrow-right-icon.svg" alt="arrow icon" id="arrow-svg"/><h1 class="nav-bar-expanded-text">Inklappen</h1></a>
                    </div>

                 </div>

                <a asp-controller="Home" asp-action="Index"><img src="~/svg-icons/home-icon.svg" alt="home icon" id="home-svg"/><h1 class="nav-bar-expanded-text">Home</h1></a>
                <a href="#"><img src="~/svg-icons/voting-icon.svg" alt="vote icon" id="voting-svg"/><h1 class="nav-bar-expanded-text">Stemmen</h1></a>
                <a href="#"><img src="~/svg-icons/calendar-icon.svg" alt="elections icon" id="elections-svg"/><h1 class="nav-bar-expanded-text">Verkiezingen</h1></a>
                <a href="#"><img src="~/svg-icons/party-icon.svg" alt="parties icon" id="parties-svg"/><h1 class="nav-bar-expanded-text">Partijen</h1></a>

                    <div class="icon-width-fix">
                        <a asp-controller="Home" asp-action="Logout" id="logout-icon"><img src="~/svg-icons/quit-icon.svg" alt="logout icon" id="logout-svg"/><h1 class="nav-bar-expanded-text">Uitloggen</h1></a>
                    </div>
                
            </div>

         </nav>

        <main>

            <div class="vml-message">

                @if (TempData["Vml"] != null) foreach (var message in (string[])TempData["Vml"])
                    {
                        <p>@message</p>
                    }

            </div>

            @RenderBody()

        </main>

    </div>

  
    <footer>
            Copyright 2024  -  <a href="https://www.rijksoverheid.nl/" target="_blank" id="copyright-link">Rijksoverheid</a>
    </footer>
   
    <script>
        function toggleNav() {
            const nav = document.getElementById("nav-bar");
            nav.classList.toggle("collapsed");
        }
    </script>
</body>
</html>



<script>
    document.addEventListener("DOMContentLoaded", function () {
        var vmlMessageDiv = document.querySelector('.vml-message');

        if (!vmlMessageDiv.textContent.trim()) {

            vmlMessageDiv.classList.add('hidden');
        }
    });
</script>
